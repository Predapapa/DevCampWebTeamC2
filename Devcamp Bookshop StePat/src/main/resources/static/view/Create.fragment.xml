<core:FragmentDefinition    
xmlns="sap.m"  
xmlns:core="sap.ui.core">
	<Dialog       
	id="addBooksDialog" 
	title="Create"      
	contentHeight="100em" 
	contentWidth="100em">
	     <List>           
		 	<InputListItem>
				<Input 
					id="newTitle"                 
					placeholder="Title"                 
					value="{title}" />
			</InputListItem>
			<InputListItem>
				<Input               
					placeholder="Author"                 
					value="{/author}" />
			</InputListItem>
			<InputListItem>
				<Input           
					placeholder="Editor"                 
					value="{/editor}" />
			</InputListItem>
			<InputListItem>
				<Input 
					placeholder="ISBN"                 
					value="{/isbn}" />
			</InputListItem>
			<InputListItem >
				<Input                 
					placeholder="Publishing Year"                 
					value="{/pubyear}" />
			</InputListItem>
			<InputListItem>
				<Input                 
					placeholder="Price"                 
					value="{/price}" />
			</InputListItem>
			<InputListItem>
				<Input                 
					placeholder="Stock"                 
					value="{/stock}" />
			</InputListItem>
		</List>
		<!-- <beginButton> -->
			<Button text="Save" press=".onSaveDialog"/>
		<!-- <endButton> -->
		<!-- <beginButton> -->
				<Button text="Close" press=".onCloseDialog"/>
		<!-- <endButton> -->
	</Dialog>
</core:FragmentDefinition>